{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": ["warn", "never"],
    "react/prop-types": "off",
    "indent": ["error", 2],
    "arrow-parens": ["warn", "as-needed"]
  }
}
