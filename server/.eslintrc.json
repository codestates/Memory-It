{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "semi": ["warn", "never"],
    "indent": ["warn", 2],
    // "quotes": ["warn", "single"],
    "arrow-parens": ["warn", "as-needed"]
  }
}
